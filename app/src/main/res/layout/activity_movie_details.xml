<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_movie_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.popularmovies1.activities.MovieDetailsActivity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/iv_details_poster" />

    <TextView
        android:text="@string/original_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/iv_details_poster"
        android:layout_toEndOf="@+id/iv_details_poster"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:id="@+id/tv_original_title_label"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/tv_original_title_label"
        android:layout_toEndOf="@+id/tv_original_title_label"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:id="@+id/tv_original_title_value" />

    <TextView
        android:text="@string/release_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_release_date_label"
        android:layout_below="@+id/tv_original_title_label"
        android:layout_alignLeft="@+id/tv_original_title_label"
        android:layout_alignStart="@+id/tv_original_title_label" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_original_title_value"
        android:layout_alignLeft="@+id/tv_original_title_value"
        android:layout_alignStart="@+id/tv_original_title_value"
        android:id="@+id/tv_release_date_value" />

    <TextView
        android:text="@string/vote_average"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_release_date_label"
        android:layout_alignLeft="@+id/tv_release_date_label"
        android:layout_alignStart="@+id/tv_release_date_label"
        android:id="@+id/tv_vote_average_label" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_release_date_value"
        android:layout_alignLeft="@+id/tv_release_date_value"
        android:layout_alignStart="@+id/tv_release_date_value"
        android:id="@+id/tv_vote_average_value" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_vote_average_label"
        android:layout_marginTop="55dp"
        android:id="@+id/tv_overview_value" />
</RelativeLayout>
